@model Project.Models.Entities.Category
@{
    ViewBag.Title = "Category Editing";
}
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="CategoryName" class="control-label">Name</label>
        <input type="text" asp-for="CategoryName" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
</form>