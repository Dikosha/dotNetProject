@model Project.Models.Entities.Author
@{
    ViewBag.Title = "Author Editing";
}
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="FullName" class="control-label">Name</label>
        <input type="text" asp-for="FullName" class="form-control" />
    </div>
    
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
</form>